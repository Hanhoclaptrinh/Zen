generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  email            String    @unique
  passwordHash     String
  fullName         String?
  avatarUrl        String? // avatar user
  resetCode        String?
  resetCodeExpires DateTime?
  createdAt        DateTime  @default(now())

  categories   Category[]
  transactions Transaction[]
  budgets      Budget[]
}

model Category {
  id        Int          @id @default(autoincrement())
  name      String
  type      CategoryType
  userId    Int
  createdAt DateTime     @default(now())

  user         User          @relation(fields: [userId], references: [id])
  transactions Transaction[]
  budgets      Budget[]
}

model Transaction {
  id              Int          @id @default(autoincrement())
  amount          Decimal      @db.Decimal(12, 2)
  note            String?
  type            CategoryType
  transactionDate DateTime
  createdAt       DateTime     @default(now())
  isSplit         Boolean      @default(false)
  imageUrl        String? // image of transaction

  userId     Int
  categoryId Int

  user         User          @relation(fields: [userId], references: [id])
  category     Category      @relation(fields: [categoryId], references: [id])
  splitDetails SplitDetail[]

  @@index([userId, transactionDate])
}

model SplitDetail {
  id            Int    @id @default(autoincrement())
  transactionId Int
  name          String
  amount        Decimal @db.Decimal(12, 2)
  isPaid        Boolean @default(false)

  transaction Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
}

model Budget {
  id          Int      @id @default(autoincrement())
  amountLimit Decimal  @db.Decimal(12, 2)
  period      String   @default("monthly") // monthly, weekly
  userId      Int
  categoryId  Int? // optional: limit for specific category or general
  createdAt   DateTime @default(now())

  user     User      @relation(fields: [userId], references: [id])
  category Category? @relation(fields: [categoryId], references: [id])
}

enum CategoryType {
  income
  expense
}
